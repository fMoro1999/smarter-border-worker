    "version": "0.2.0",
    "configurations": [
        {
            "name": "App",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Serve Angular App"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}